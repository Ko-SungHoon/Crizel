<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="egovframework.rfc3.layout.vo">
	<class name="LayoutVO"	table="RFC_COMTNLAYOUT">
	<cache usage="read-write"/>
		<comment>레이아웃 관리 테이블</comment>
		<id name="layoutSid" type="long">
			<column name="LAYOUT_SID">
				<comment>레이아웃 고유ID</comment>
            </column>
		</id>
		<property name="sgroupId" type="string"  not-null="true" >
			<column name="SGROUP_ID" length="30">
				<comment>사이트 그룹 고유ID</comment>
			</column>
		</property>
		<property name="domainId" type="string"  not-null="true" >
			<column name="DOMAIN_ID" length="30">
				<comment>도메인 고유ID</comment>
			</column>
		</property>
		<property name="layoutNm" type="string" >
			<column name="LAYOUT_NM" length="100">
				<comment>레이아웃 이름</comment>
			</column>
		</property>
		<property name="engName" type="string" >
			<column name="ENG_NAME" length="100">
				<comment>레이아웃 영문 이름</comment>
			</column>
		</property>
		
		<property name="layoutContent" type="text" >
			<column name="LAYOUT_CONTENT" length="1073741824">
				<comment>레이아웃 내용</comment>
			</column>
		</property>
		<property name="regDate" type="timestamp"  >
			<column name="REG_DATE">
				<comment>등록일자</comment>
			</column>
		</property>
	</class>
	
	
	<class name="LayoutBackUpVO"
		table="RFC_COMTNLAYOUT_BACKUP_TB">
		<cache usage="read-write"/>
		<comment>레이아웃 백업/복원 테이블</comment>
		<id name="layoutBpSid" type="long" >
			<column name="LAYOUT_BP_SID">	
				<comment>레이아웃 백업 고유ID</comment>
			</column>
		</id>
		<property name="layoutSid"  type="long" not-null="true">
			<column name="LAYOUT_SID" default="0"  >
				<comment>레이아웃 고유ID</comment>
			</column>
		</property>
		<property name="sgroupId" type="string"  not-null="true">
			<column name="SGROUP_ID" length="30"  >
				<comment>사이트그룹 고유ID</comment>
			</column>
		</property>
		<property name="domainId" type="string"  not-null="true">
			<column name="DOMAIN_ID" length="30"  >
				<comment>도메인 고유ID</comment>
			</column>
		</property>
		<property name="layoutNm" type="string" >
			<column name="LAYOUT_NM" length="100">
				<comment>레이아웃 이름</comment>
			</column>
		</property>
		<property name="engName" type="string" >
			<column name="ENG_NAME" length="100">
				<comment>레이아웃 영문 이름</comment>
			</column>
		</property>
		<property name="layoutContent" type="text" >
			<column name="LAYOUT_CONTENT" length="1073741824">
				<comment>레이아웃 설명</comment>
			</column>
		</property>
		<property name="regDate" type="timestamp" insert="true" update="false" >
			<column name="REG_DATE">
				<comment>등록/수정일</comment>
			</column>
		</property>
		<property name="contsFlag" type="string" >
			<column name="CONTS_FLAG" length="15">
				<comment>저장모드</comment>
			</column>
		</property>
		<property name="userId" type="string" >
			<column name="USER_ID" length="20">
				<comment>등록자 ID</comment>
			</column>
		</property>
		<property name="isRestore" type="string" >
			<column name="IS_RESTORE" length="10" default="'no'" >
				<comment>복원여부</comment>
			</column>
		</property>
		<property name="restoreDate" type="timestamp" insert="false" update="true" >
			<column name="RESTORE_DATE">
				<comment>복원일</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>

