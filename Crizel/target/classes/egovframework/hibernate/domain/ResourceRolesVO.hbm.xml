<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="egovframework.rfc3.iam.vo">
	<class name="ResourceRolesVO"	table="RFC_COMTNRESOURCE_ROLES">
	  <cache usage="read-write"/>
		<comment>자원 접근 권한 테이블</comment>
	    <composite-id>
			<key-property name="resourceId"  type="string" length="30">
				<column name="RESOURCE_ID">
            		<comment>자원고유ID</comment>
            	</column>
			</key-property>
			
			<key-property name="roleId" type="string"  length="30" >
				<column name="ROLE_ID">
            		<comment>권한ID</comment>
            	</column>
			</key-property>		
		</composite-id>
	</class>
</hibernate-mapping>