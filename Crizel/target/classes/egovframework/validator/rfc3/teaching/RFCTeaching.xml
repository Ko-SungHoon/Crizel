<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
    <formset>
    	<form name="toolsVO">
			<field property="categoryId" depends="required">
        		<arg0 key="분류" resource="false"/>
			</field>			
			<field property="toolsName" depends="required">
        		<arg0 key="교재/교구명" resource="false"/>
			</field>
			<field property="unit" depends="required">
        		<arg0 key="단위" resource="false"/>
			</field>
			<field property="totalCnt" depends="required">
        		<arg0 key="전체 보유량" resource="false"/>
			</field>
			<field property="toolsContent" depends="required">
        		<arg0 key="교구설명" resource="false"/>
			</field>
			<field property="isUse" depends="required">
        		<arg0 key="사용여부" resource="false"/>
			</field>
			<field property="isDelivered" depends="required">
        		<arg0 key="택배가능여부" resource="false"/>
			</field>
		</form>
		
	</formset>
</form-validation>
	