<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mhw">	
	<select id="monsterList" parameterType="com.crizel.mhw.MhwVO" resultType="com.crizel.mhw.MhwVO">
		<![CDATA[
			SELECT 
				MHW_NO
				, MHW_TYPE
				, MHW_TYPE2
				, MHW_NAME
				, MHW_CONTENT
			FROM MHW
			WHERE MHW_TYPE = #{type}
			ORDER BY MHW_LEVEL DESC, MHW_NAME
		]]>
	</select>
</mapper>